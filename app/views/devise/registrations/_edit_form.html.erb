<div class="form-wrapper">
  <h2 class="target-mvd">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label "NAME", :class => "field-label" %><br />
      <%= f.text_field :name, autofocus: true, :class => "field-input", autocomplete: "off", :value => current_user.name %>
    </div>

    <div class="field">
      <%= f.label 'GENDER', :class => "field-label" %><br />
      <%= f.select(:gender, ['Male', 'Female'], {:selected => current_user.gender }, { :class => 'field-input' }) %>
    </div>
    <div class="field">
      <%= f.label :email, :class => "field-label" %><br />
      <%= f.email_field :email, :class => "field-input", autocomplete: "off", :value => current_user.email %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, :class => "field-label"  %> <br /><i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", :class => "field-input" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => "field-label"  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "field-input" %>
    </div>

    <div class="field">
      <%= f.label :current_password, :class => "field-label"  %> <br /> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :class => "field-input" %>
    </div>

    <div class="actions">
      <!-- <%= f.submit "Update", :remote => true, :class => "submit-button" %> -->
      <button class="submit-button" id="edit-user-submit">Update</button>
    </div>
  <% end %>

  <%= link_to "Cancel my account",registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "action-link"  %>
</div>
